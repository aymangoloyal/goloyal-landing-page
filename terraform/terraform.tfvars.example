# GoLoyal Terraform Configuration Example
# Copy this file to terraform.tfvars and update with your values

# Application Configuration
app_name    = "goloyal"
environment = "prod"  # dev, staging, or prod

# Azure Configuration
azure_location            = "UK South"
azure_resource_group_name = ""  # Leave empty to auto-generate

# Database Configuration
db_admin_password = "YourSecurePassword123!"  # Minimum 8 characters

# Container Configuration
container_image = ""  # Leave empty for default, or specify your image URL

# Scaling Configuration
min_instances = 0
max_instances = 10
cpu_limit     = "1000m"
memory_limit  = "2Gi"

# Security Configuration
enable_private_network = true
backup_retention_days  = 7